# Kills all running containers
docker_containers_kill_all() {
    docker kill $(docker ps -q)
}

# Delete all stopped containers
docker_containers_delete_all_stopped() {
    docker rm $(docker ps -a -q)
}

# Delete all untagged/dangling images
docker_images_delete_all_untagged() {
    docker rmi $(docker images -q -f dangling=true)
}

# Export env. vars. for docker client to point at host
docker_machine_env() {
    if [ ! -z $1 ]; then
        eval $(docker-machine env "$1")
    else
        echo "Please provide machine name as argument."
        exit 1
    fi
}

# Unset env vars for docker client
docker_machine_env_unset() {
    eval $(docker-machine env --unset)
}
