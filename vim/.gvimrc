" .gvimrc - GUI specific config

" Only show tab line if #tabs > 1
set showtabline=1

" Remove the Toolbar (T)
set guioptions-=T

" Remove the scrollbars everywhere
set guioptions-=r
set guioptions-=l
set guioptions-=L
set guioptions-=R

" Set the font and size
set guifont=InconsolataForPowerline\ NF:h12

" Anti alias
set antialias

colorscheme hybrid
